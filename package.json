{
  "name": "@kcws/root",
  "version": "0.0.0",
  "private": true,
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "commit": "cz",
    "prepare": "husky",
    "lint": "nx run-many --output-style stream --batch --target lint",
    "build": "nx run-many --output-style stream --batch --target build",
    "test": "nx run-many --output-style stream --batch --target test",
    "start": "nx run-many --output-style stream --batch --targets lint,build,test",
    "start:ci": "nx affected --output-style static --batch --targets lint,build,test",
    "release": "nx release --dry-run",
    "release:ci": "nx release",
    "publish:ci": "nx release publish --yes"
  },
  "dependencies": {
    "@nx/devkit": "19.6.5"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.1",
    "@commitlint/config-conventional": "19.4.1",
    "@commitlint/config-nx-scopes": "19.3.1",
    "@commitlint/cz-commitlint": "19.4.0",
    "@nx/js": "19.6.5",
    "@nx/workspace": "19.6.5",
    "@swc-node/register": "1.10.9",
    "@swc/core": "1.7.24",
    "@swc/helpers": "0.5.11",
    "commitizen": "4.3.0",
    "husky": "9.1.5",
    "inquirer": "9.3.6",
    "lint-staged": "15.2.10",
    "nx": "19.6.5",
    "prettier": "3.3.3",
    "typescript": "5.5.2"
  },
  "packageManager": "pnpm@9.9.0",
  "engines": {
    "node": ">= 16"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "nx": {
    "includedScripts": [
      "commit"
    ]
  }
}
